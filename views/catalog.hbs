<script src="scripts/datetime.js"></script>
<script src="scripts/catalog.js"></script>
{{#each clinics}}
    <div class="product_card">
        <img class="product_card_vertical_line" src="images/Line_10.svg">
        <div class="product_card_left">
            <div class="card_info">
                <img class="clinic_logo"
                     width="96" height="96"
                     src="{{#if image}} {{image}} {{else}} images/image_filler.svg {{/if}}">
                <div>
                    <h3 class="clinic_name">{{name}}</h3>
                    <p class="clinic_working_hours">Сегодня работают до {{labour_time}}</p>
                    <div class="clinic_rating">
                        <p class="rating_num">{{yandex.rating}}</p>
                        <section class="precise">
                            <div class="fill">
                                <div class="rating">
                                    <div class="bg"></div>
                                    <div class="value" style="width: {{yandex.rating_percent}}%"></div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
            <hr id="horizontal_line_mobile_1"/>
            <div class="recommendations">
                <img height="16" id="Paw" src="images/Paw.svg" width="20">
                <p class="rec_text">{{yandex.rating_percent}}% пользователей рекомендуют клинику</p>
            </div>
            <div class="clinic_tel">
                <img class="call_icon" height="20" src="images/Call.svg" width="20">
                <a class="tel_number" href="tel:{{phone}}">{{phone}}</a>
            </div>
            <div class="clinic_location">
                <img class="location_icon" height="20" src="images/Location.svg" width="17">
                <p class="address">{{address}}</p>
            </div>
            <p class="clinic_description">{{description}}</p>
        </div>
        <hr id="horizontal_line_mobile_1"/>
        <div class="product_card_right">
            <img class="product_card_horizontal_line" src="images/Line_11.svg">
            <div class="product_card_right_top">
                <div class="price_list">
                    {{#preview services 3}}
                        {{#each this}}
                            <div class="service">
                                <p class="name_of_service">{{@key}}</p>
                                <p class="price">{{this}}</p>
                            </div>
                        {{/each}}
                    {{/preview}}
                </div>
                <a href="modal?name={{name}}" class="all_services" data-modal>Все услуги</a>
            </div>
            <hr id="horizontal_line_mobile_1"/>
            <div class="product_card_right_bottom">
                <p class="selector_text">Выберите день и время для записи на приём</p>
                <div class="date-time_selector">
                    <div class="date_selector">
                        <div class="date_button">
                            <input id="date_button1" type="radio" name="date" value="{{date}}">
                            <label for="date_button1">Пн<br>8</label>
                        </div>
                        <div class="date_button">
                            <input id="date_button2" type="radio" checked name="date" value="{{date}}">
                            <label for="date_button2">Вт<br>9</label>
                        </div>
                        <div class="date_button">
                            <input id="date_button2" type="radio" name="date" value="{{date}}">
                            <label for="date_button2">Ср<br>10</label>
                        </div>
                    </div>
                    <div class="time_selector">
                        <div class="time_button">
                            <input id="time_button1" type="radio" name="time" value="{{time}}">
                            <label for="time_button1">10:00</label>
                        </div>
                        <div class="time_button">
                            <input id="time_button2" type="radio" name="time" value="{{time}}">
                            <label for="time_button2">11:00</label>
                        </div>
                        <div class="time_button">
                            <input id="time_button3" type="radio" name="time" value="{{time}}">
                            <label for="time_button3">12:00</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}

