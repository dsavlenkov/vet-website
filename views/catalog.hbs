<script src="scripts/catalog.js"></script>
{{#each clinics}}
    <div class="product_card">
        <img class="product_card_vertical_line" src="images/Line_10.svg">
        <div class="product_card_left">
            <div class="card_info">
                <img class="clinic_logo"
                     width="96" height="96"
                     src="{{#if image}} {{image}} {{else}} images/image_filler.svg {{/if}}">
                <div>
                    <h3 class="clinic_name">{{name}}</h3>
                    <p class="clinic_working_hours">Сегодня работают до {{labour_time}}</p>
                    <div class="clinic_rating">
                        <p class="rating_num">{{yandex.rating}}</p>
                        <section class="precise">
                            <div class="fill">
                                <div class="rating">
                                    <div class="bg"></div>
                                    <div class="value" style="width: {{yandex.rating_percent}}%"></div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
            <hr id="horizontal_line_mobile_1"/>
            <div class="recommendations">
                <img height="16" id="Paw" src="images/Paw.svg" width="20">
                <p class="rec_text">{{yandex.rating_percent}}% пользователей рекомендуют клинику</p>
            </div>
            <div class="clinic_tel">
                <img class="call_icon" height="20" src="images/Call.svg" width="20">
                <a class="tel_number" href="tel:{{phone}}">{{phone}}</a>
            </div>
            <div class="clinic_location">
                <img class="location_icon" height="20" src="images/Location.svg" width="17">
                <p class="address">{{address}}</p>
            </div>
            <p class="clinic_description">{{description}}</p>
        </div>
        <hr id="horizontal_line_mobile_1"/>
        <div class="product_card_right">
            <img class="product_card_horizontal_line" src="images/Line_11.svg">
            <div class="product_card_right_top">
                <div class="price_list">
                    {{#preview services 3}}
                        {{#each this}}
                            <div class="service">
                                <p class="name_of_service">{{@key}}</p>
                                <p class="price">{{this}}</p>
                            </div>
                        {{/each}}
                    {{/preview}}
                </div>
                <a href="modal?name={{name}}" class="all_services" data-modal>Все услуги</a>
            </div>
            <hr id="horizontal_line_mobile_1"/>
            <div class="product_card_right_bottom">
                <p class="selector_text">Выберите день и время для записи на приём</p>
                <div class="date-time_selector">
                    <div class="date_selector">
                        <!-- TODO: make it all `a` element so they're all just references, not buttons  -->
                        <button class="date_button" id="date_button_1">Вт<br>9</button>
                        <button class="date_button" id="date_button_2">Ср<br>10</button>
                        <button class="date_button" id="date_button_3">Чт<br>11</button>
                        <button class="date_button" id="date_button_4">Пт<br>12</button>
                        <button class="date_button" id="date_button_5">Сб<br>13</button>
                        <button class="date_button" id="date_button_6">Вс<br>14</button>
                        <button class="date_button" id="date_button_7">Пн<br>15</button>
                    </div>
                    <div class="time_selector">
                        <a href="modal?name={{name}}" class="time_button" data-modal>10:00</a>
                        <a href="modal?name={{name}}" class="time_button" data-modal>11:00</a>
                        <a href="modal?name={{name}}" class="time_button" data-modal>12:00</a>
                        <a href="modal?name={{name}}" class="time_button" data-modal>13:00</a>
                        <a href="modal?name={{name}}" class="time_button" data-modal>14:00</a>
                        <a href="modal?name={{name}}" class="time_button" data-modal>15:00</a>
                        <a href="modal?name={{name}}" class="time_button" data-modal>16:00</a>
                        <a href="modal?name={{name}}" class="time_button" data-modal>17:00</a>
                        <a href="modal?name={{name}}" class="time_button" data-modal>18:00</a>
                        <a href="modal?name={{name}}" class="time_button" data-modal>19:00</a>
                        <a href="modal?name={{name}}" class="time_button" data-modal>20:00</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}

<div class="load_more">
    <a class="load_more_button">Загрузить еще</a>
</div>
